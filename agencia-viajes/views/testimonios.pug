extends ./layout/index

block contenido
  main.container.mt-5
    h1.text-center.mt-5 #{pagina}

    .row
      include ./layout/bloque_testimonios

    .row
      h2.d-block.w-100.text-center Agrega un testimonio

      .col-md-12
        if errores
          each error in errores
            .alert.col.alert-danger.text-center=error.mensaje

      .row.justify-content-center.col
        .col-md-8
          form(action="/testimonios" method="POST")
            .form-group
              label(for="nombre") Nombre
              input#nombre(type="text", placeholder="Tu nombre", name="nombre", class="form-control" value=(campos && campos.nombre))
            .form-group
              label(for="correo") Correo electronico
              input#correo(type="email", placeholder="Tu correo", name="correo", class="form-control" value=(campos && campos.correo))
            .form-group
              label(for="mensaje") Mensaje
              textarea#mensaje(name="mensaje", placeholder="Tu mensaje", rows="3" class="form-control") #{campos && campos.mensaje}

            input.btn.btn-success.btn-block(type="submit")
